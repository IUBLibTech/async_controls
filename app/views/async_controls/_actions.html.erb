<% # TODO: move inline styles to CSS %>
<p class="async-controls" style="border: solid 1px gray;">
  <h2>Storage Status: <span class="async-controls-status"><%= async_controls_presenter.status_phrase %></span></h2>

  <% if async_controls_presenter.fixity_available %>
    <table class="table table-striped file_set attributes">
      <tbody>
        <tr>
          <th><%= async_controls_presenter.fixity_type %> Checksum</th>
          <td><%= async_controls_presenter.checksum %></td>
        </tr>
        <tr>
          <th>Fixity date</th>
          <td><%= async_controls_presenter.fixity_date %></td>
        </tr>
      </tbody>
    </table>
  <% end %>

  <% async_controls_presenter.actions.each do |action| %>
    <%= link_to action[:title], action[:link], class: "btn btn-default" %>
  <% end %>
</p>
